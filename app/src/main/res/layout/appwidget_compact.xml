<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/sgAppWidgetBackground"
        android:orientation="horizontal"
        tools:ignore="UselessParent">

        <ListView
            android:id="@+id/list_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clipToPadding="@bool/gridClipToPadding"
            android:divider="@null"
            android:paddingTop="@dimen/inline_padding"
            android:paddingBottom="@dimen/inline_padding" />

        <TextView
            android:id="@+id/empty_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="@string/no_nextepisode"
            android:textColor="?android:attr/textColorPrimary"
            tools:ignore="UnusedAttribute" />

        <LinearLayout
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/widget_title"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="?attr/sgAppWidgetListSelector"
                android:focusable="true">

                <ImageView
                    android:id="@+id/imageViewLauncher"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/app_name"
                    android:src="@mipmap/ic_app" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/widget_settings"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/sgAppWidgetListSelector"
                android:focusable="true">

                <ImageView
                    android:id="@+id/imageViewSettings"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/preferences"
                    android:src="?attr/sgAppWidgetDrawableSettings" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

</merge>