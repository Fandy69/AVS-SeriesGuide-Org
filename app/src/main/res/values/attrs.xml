<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Special drawables -->
    <attr name="sgActivatedItemBackgroundDrawer" format="reference" />
    <attr name="sgBorderlessButtonBackground" format="reference" />

    <!-- Text colors -->
    <attr name="sgTextColorGreen" format="reference|color" />
    <attr name="sgTextColorSecondaryDim" format="reference|color" />

    <!-- Text Appearances -->
    <attr name="sgTextAppearanceBody1" format="reference" />
    <attr name="sgTextAppearanceBody2" format="reference" />

    <!-- Other colors -->
    <attr name="sgColorBackgroundCard" format="reference|color" />
    <attr name="sgColorBackgroundDim" format="reference|color" />
    <attr name="sgColorIcon" format="reference|color" />
    <attr name="sgColorIconInactive" format="reference|color" />
    <attr name="sgColorSeparator" format="reference|color" />
    <attr name="sgColorDivider" format="reference|color" />
    <attr name="sgColorNavDrawerIcon" format="reference" />
    <attr name="sgColorNavDrawerText" format="reference" />
    <attr name="sgColorShadow" format="reference|color" />
    <attr name="sgColorStatusBarOverlay" format="reference|color" />

    <!-- Drawables -->
    <attr name="drawableBackgroundGradient" format="reference" />

    <!-- Custom view attributes -->
    <declare-styleable name="EmptyView">
        <attr name="emptyViewMessage" format="string" />
        <attr name="emptyViewButtonText" format="string" />
    </declare-styleable>

    <declare-styleable name="FeatureStatusView">
        <attr name="featureSupported" format="boolean" />
        <attr name="featureDescription" format="string" />
    </declare-styleable>

    <declare-styleable name="FilterBox">
        <attr name="filterBoxDescription" format="string" />
    </declare-styleable>

    <declare-styleable name="DragSortListView">
        <attr name="collapsed_height" format="dimension" />
        <attr name="drag_scroll_start" format="float" />
        <attr name="max_drag_scroll_speed" format="float" />
        <attr name="remove_mode">
            <enum name="clickRemove" value="0" />
            <enum name="flingRemove" value="1" />
        </attr>
        <attr name="track_drag_sort" format="boolean"/>
        <attr name="float_alpha" format="float"/>
        <attr name="slide_shuffle_speed" format="float"/>
        <attr name="remove_animation_duration" format="integer"/>
        <attr name="drop_animation_duration" format="integer"/>
        <attr name="drag_enabled" format="boolean" />
        <attr name="sort_enabled" format="boolean" />
        <attr name="remove_enabled" format="boolean" />
        <attr name="drag_start_mode">
            <enum name="onDown" value="0" />
            <enum name="onMove" value="1" />
            <enum name="onLongPress" value="2"/>
        </attr>
        <attr name="drag_handle_id" format="integer" />
        <attr name="fling_handle_id" format="integer" />
        <attr name="click_remove_id" format="integer" />
        <attr name="use_default_controller" format="boolean" />
    </declare-styleable>

</resources>