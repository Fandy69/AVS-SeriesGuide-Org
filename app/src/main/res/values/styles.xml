<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <!-- Text styles -->
    <style name="TextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/text_size_default_sg</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
    </style>

    <style name="TextAppearance.Display3">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">56sp</item>
    </style>

    <style name="TextAppearance.Display1">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="TextAppearance.Display1.White">
        <item name="android:textColor">@color/sg_white</item>
    </style>

    <style name="TextAppearance.Headline">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearance.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.Title.Dim">
        <item name="android:textColor">?attr/sgTextColorSecondaryDim</item>
    </style>

    <style name="TextAppearance.Subhead">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Subhead.Bold">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.Subhead.Dim">
        <item name="android:textColor">?attr/sgTextColorSecondaryDim</item>
    </style>

    <style name="TextAppearance.Subhead.Secondary">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="TextAppearance.Body">
        <item name="android:textSize">@dimen/text_size_default_sg</item>
    </style>

    <style name="TextAppearance.Body.Bold">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.Body.Bold.Accent">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="TextAppearance.Body.Bold.Dim">
        <item name="android:textColor">?attr/sgTextColorSecondaryDim</item>
    </style>

    <style name="TextAppearance.Body.Dim">
        <item name="android:textColor">?attr/sgTextColorSecondaryDim</item>
    </style>

    <style name="TextAppearance.Body.Secondary">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="TextAppearance.Body.Secondary.Narrow">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-condensed</item>
    </style>

    <style name="TextAppearance.Body.Green">
        <item name="android:textColor">?attr/sgTextColorGreen</item>
    </style>

    <style name="TextAppearance.Body.Highlight">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextAppearance.Body.Highlight.Red">
        <item name="android:textColor">@color/text_red</item>
    </style>

    <style name="TextAppearance.Caption">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">@dimen/text_size_caption_sg</item>
    </style>

    <style name="TextAppearance.Caption.Dim">
        <item name="android:textColor">?attr/sgTextColorSecondaryDim</item>
    </style>

    <style name="TextAppearance.Caption.Narrow">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-condensed</item>
    </style>

    <style name="TextAppearance.Caption.Narrow.Dim">
        <item name="android:textColor">?attr/sgTextColorSecondaryDim</item>
    </style>

    <style name="TextAppearance.Menu">
        <item name="android:textSize">@dimen/text_size_menu_sg</item>
    </style>

    <style name="TextAppearance.Button">
        <item name="android:textSize">@dimen/text_size_default_sg</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.SeriesGuide" />

    <style name="TextAppearance.SeriesGuide.Body1" parent="TextAppearance.MaterialComponents.Body1" />

    <style name="TextAppearance.SeriesGuide.Body2" parent="TextAppearance.MaterialComponents.Body2" />
    <style name="TextAppearance.SeriesGuide.Body2.Accent">
        <item name="android:textColor">@color/sg_text_color_accent</item>
    </style>
    <style name="TextAppearance.SeriesGuide.Body2.Dim">
        <item name="android:textColor">?attr/sgTextColorSecondaryDim</item>
    </style>
    <style name="TextAppearance.SeriesGuide.Body2.Error">
        <item name="android:textColor">?attr/colorError</item>
    </style>
    <style name="TextAppearance.SeriesGuide.Body2.Secondary">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>
    <style name="TextAppearance.SeriesGuide.Body2.Bold">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="TextAppearance.SeriesGuide.Body2.Bold.Accent">
        <item name="android:textColor">@color/sg_text_color_accent</item>
    </style>
    <style name="TextAppearance.SeriesGuide.Body2.Italics">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextAppearance.SeriesGuide.Button" parent="TextAppearance.MaterialComponents.Button" />

    <style name="TextAppearance.SeriesGuide.Caption" parent="TextAppearance.MaterialComponents.Caption" />
    <style name="TextAppearance.SeriesGuide.Caption.Dim">
        <item name="android:textColor">?attr/sgTextColorSecondaryDim</item>
    </style>

    <style name="TextAppearance.SeriesGuide.Headline4" parent="TextAppearance.MaterialComponents.Headline4" />
    <style name="TextAppearance.SeriesGuide.Headline4.White">
        <item name="android:textColor">@color/sg_white</item>
    </style>

    <style name="TextAppearance.SeriesGuide.Headline5" parent="TextAppearance.MaterialComponents.Headline5" />
    <style name="TextAppearance.SeriesGuide.Headline6" parent="TextAppearance.MaterialComponents.Headline6" />

    <style name="TextAppearance.SeriesGuide.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1" />
    <style name="TextAppearance.SeriesGuide.Subtitle1.Bold">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.SeriesGuide.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2" />

    <style name="TextAppearance.SeriesGuide.Tab" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textColor">?attr/colorOnPrimarySurface</item>
    </style>

    <style name="TextAppearance.SeriesGuide.Tab.Surface">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="TextAppearance.SeriesGuide.EmptyState" parent="TextAppearance.Title.Dim" />

    <!-- Widgets are not part of the app, so app theme attributes can not be used. -->
    <style name="TextAppearance.SeriesGuide.Widget.Title" parent="">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="TextAppearance.SeriesGuide.Widget.Title.Dark">
        <item name="android:textColor">@color/sg_color_primary_300_emphasis_high</item>
    </style>
    <style name="TextAppearance.SeriesGuide.Widget.Title.Light">
        <item name="android:textColor">@color/sg_color_primary_500</item>
    </style>

    <!-- Widget styles -->
    <style name="Widget" />

    <style name="Widget.SeriesGuide" parent="Widget" />

    <!-- Buttons -->
    <style name="Widget.SeriesGuide.Button" parent="Widget.MaterialComponents.Button" />
    <style name="Widget.SeriesGuide.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton" />

    <style name="Widget.SeriesGuide.Button.Borderless" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:maxLines">2</item>
    </style>

    <style name="Widget.SeriesGuide.Button.Borderless.Default">
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif</item>
        <item name="android:drawablePadding">@dimen/default_padding</item>
    </style>

    <style name="Widget.SeriesGuide.Button.Borderless.Sheet">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif</item>
        <item name="android:textAppearance">@style/TextAppearance.Menu</item>
        <item name="android:paddingLeft">@dimen/large_padding</item>
        <item name="android:paddingRight">@dimen/large_padding</item>
        <item name="iconPadding">32dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="Widget.SeriesGuide.Button.Borderless.Accent">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="Widget.SeriesGuide.Button.Borderless.Caption">
        <item name="android:textSize">@dimen/text_size_caption_sg</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="Widget.SeriesGuide.Button.MediaItem" parent="Widget.SeriesGuide.Button.Borderless.Caption">
        <item name="android:ellipsize">end</item>
        <item name="android:padding">8dp</item>
        <item name="android:maxLines">3</item>
    </style>

    <style name="Widget.SeriesGuide.Button.Borderless.Rating">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:textColor">@color/sg_white</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="Widget.SeriesGuide.DistillationItem">
        <item name="android:textAppearance">@style/TextAppearance.Menu</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:layout_marginStart">@dimen/large_padding</item>
        <item name="android:layout_marginEnd">@dimen/large_padding</item>
    </style>

    <style name="Widget.SeriesGuide.FilterBox">
        <item name="android:paddingStart">@dimen/large_padding</item>
        <item name="android:paddingEnd">@dimen/large_padding</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!-- TextView -->
    <style name="Widget.SeriesGuide.TextView" />

    <style name="Widget.SeriesGuide.TextView.Body">
        <item name="android:lineSpacingMultiplier">1.25</item>
    </style>

    <style name="Widget.SeriesGuide.TextView.SingleLine">
        <item name="android:singleLine">true</item>
    </style>

    <style name="Widget.SeriesGuide.TextView.ShowLabels" parent="Widget.SeriesGuide.TextView.SingleLine">
        <item name="android:layout_marginLeft">@dimen/default_padding</item>
        <item name="android:layout_marginRight">@dimen/default_padding</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Toolbar -->
    <style name="Widget.SeriesGuide.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <!-- Fix popup menu sub-menu indicator colored white on white instead of gray on white. -->
        <item name="popupTheme">@style/ThemeOverlay.MaterialComponents.Light</item>
    </style>

    <style name="Widget.SeriesGuide.Toolbar.Transparent" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="android:background">@android:color/transparent</item>
        <!-- Note: this theme overlay will only work if the style is applied directly to a Toolbar. -->
        <item name="android:theme">@style/ThemeOverlay.SeriesGuide.Toolbar.Surface</item>
    </style>

    <style name="ThemeOverlay.SeriesGuide.Toolbar.Surface" parent="ThemeOverlay.MaterialComponents.Toolbar.Surface">
        <item name="colorOnSurface">?attr/colorPrimary</item>
    </style>

    <style name="Widget.SeriesGuide.Toolbar.Gradient" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="android:background">@drawable/background_actionbar_gradient</item>
        <!-- Note: not overriding titleTextColor and subtitleTextColor as currently unused. -->
        <!-- Note: this theme overlay will only work if the style is applied directly to a Toolbar. -->
        <item name="android:theme">@style/ThemeOverlay.SeriesGuide.Toolbar.Gradient</item>
    </style>

    <style name="ThemeOverlay.SeriesGuide.Toolbar.Gradient" parent="ThemeOverlay.MaterialComponents.Toolbar.Surface">
        <item name="colorControlNormal">@color/sg_on_dark_emphasis_medium</item>
        <item name="colorControlHighlight">@color/sg_ripple_material_dark</item>
        <item name="actionMenuTextColor">@color/sg_on_dark_emphasis_medium</item>
    </style>

    <!-- Tabs -->
    <style name="Widget.SeriesGuide.TabLayout">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="Widget.SeriesGuide.Tab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/tab_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/tab_padding_horizontal</item>
    </style>

    <!-- Inline snackbar -->
    <!-- Use of CoordinatorLayout shifts layouts down, counter by moving inline snackbar up. -->
    <style name="Widget.SeriesGuide.InlineSnackbar">
        <item name="android:layout_marginBottom">?attr/actionBarSize</item>
    </style>

    <!-- Dialogs -->
    <style name="Animation.CheckinDialog" parent="android:Animation.Dialog">
        <item name="android:windowExitAnimation">@anim/checkin_dialog_exit</item>
    </style>

    <!-- Grid view with no space between items. -->
    <style name="Widget.SeriesGuide.Grid">
        <item name="android:listSelector">?attr/selectableItemBackground</item>
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
    </style>

    <!-- Grid views with cards, with space between items.  -->
    <!-- The support CardView adds padding for compat shadows on pre-v21, adjust accordingly. -->
    <!-- Note: Ripple breaks when setting selector on item instead of the List/GridView. -->
    <style name="Widget.SeriesGuide.Grid.Cards">
        <item name="android:paddingTop">@dimen/grid_topbottom_padding</item>
        <item name="android:paddingBottom">@dimen/grid_topbottom_padding</item>
        <item name="android:paddingLeft">@dimen/grid_leftright_padding</item>
        <item name="android:paddingRight">@dimen/grid_leftright_padding</item>
        <item name="android:horizontalSpacing">@dimen/grid_horizontal_spacing</item>
        <item name="android:verticalSpacing">@dimen/grid_vertical_spacing</item>
    </style>

    <!-- Easy layouting -->
    <style name="DefaultPadding" />

    <style name="DefaultPadding.List">
        <item name="android:paddingTop">@dimen/default_padding</item>
        <item name="android:paddingBottom">@dimen/default_padding</item>
        <item name="android:divider">@color/transparent</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="DefaultPadding.DialogContent">
        <item name="android:paddingLeft">@dimen/larger_padding</item>
        <item name="android:paddingTop">@dimen/larger_padding</item>
        <item name="android:paddingRight">@dimen/larger_padding</item>
    </style>

    <style name="Block">
        <item name="android:layout_marginLeft">@dimen/large_padding</item>
        <item name="android:layout_marginRight">@dimen/large_padding</item>
    </style>

    <style name="Block.WithTopMargin">
        <item name="android:layout_marginTop">@dimen/large_padding</item>
        <item name="android:layout_marginBottom">@dimen/inline_padding</item>
    </style>

    <style name="Block.FlowText">
        <item name="android:lineSpacingMultiplier">1.25</item>
        <item name="android:maxEms">20</item>
    </style>

    <style name="Page">
        <item name="android:padding">@dimen/large_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Note: for child of ScrollView override layout_height to wrap_content. -->
    <style name="Page.Centered"/>

    <style name="FirstRunColumn">
        <item name="android:layout_width">match_parent</item>
    </style>

    <!-- Panes -->
    <style name="EpisodesPane">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="DetailsPane">
        <item name="android:layout_weight">1</item>
    </style>

    <!-- ////////////////////////////////////////////// -->

    <!-- Dark styles -->

    <!-- ////////////////////////////////////////////// -->

    <!-- Light styles -->

</resources>
