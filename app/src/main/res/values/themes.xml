<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme" />

    <style name="Theme.BaseSeriesGuide" parent="Theme.AppCompat.NoActionBar">

        <!-- All customizations that are SPECIFIC to API-level 21 go here. -->

    </style>

    <!-- SeriesGuides default theme -->
    <style name="Theme.SeriesGuide" parent="Theme.BaseSeriesGuide">

        <!-- All customizations that are NOT specific to a supported API-level can go here. -->

        <!-- Explicitly add windowActionBar as some devices crash due to it missing -->
        <item name="windowActionBar">false</item>

        <!--   your app's branding color (for the app bar) -->
        <item name="colorPrimary">@color/sg_color_primary</item>
        <!--   darker variant of colorPrimary (for status bar, contextual app bars) -->
        <item name="colorPrimaryDark">@color/sg_color_primary_dark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/sg_color_secondary</item>

        <!-- Windows -->
        <item name="android:colorBackground">@color/background</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="windowActionModeOverlay">true</item>
        <!-- Note: nav bar color needs to be opaque! -->
        <item name="android:navigationBarColor">@color/black_almost</item>

        <!-- Action bar -->
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.ActionBar</item>

        <!-- Text -->
        <item name="android:textAppearance">@style/TextAppearance</item>
        <item name="sgTextAppearanceBody1">@style/TextAppearance.SeriesGuide.Body1</item>
        <item name="sgTextAppearanceBody2">@style/TextAppearance.SeriesGuide.Body2</item>

        <!-- Colors -->
        <item name="sgTextColorGreen">@color/sg_color_secondary</item>
        <item name="sgTextColorSecondaryDim">@color/text_secondary_disabled_dark</item>
        <item name="sgColorBackgroundCard">@color/background_card_dark</item>
        <item name="sgColorBackgroundDim">@color/black_38</item>
        <item name="sgColorIcon">@color/white</item>
        <item name="sgColorIconInactive">@color/white_50</item>
        <item name="sgColorSeparator">@color/separator</item>
        <item name="sgColorDivider">@color/divider</item>
        <item name="sgColorShadow">@color/protection_dark</item>
        <item name="sgColorStatusBarOverlay">@color/black_87</item>

        <!-- Drawables -->
        <item name="drawableBackgroundGradient">@drawable/background_gradient</item>

    </style>

    <style name="Theme.BaseSeriesGuide.DarkBlue" parent="Theme.AppCompat.NoActionBar">

        <!-- All customizations that are SPECIFIC to API-level 21 go here. -->

    </style>

    <!-- Dark Android theme -->
    <style name="Theme.SeriesGuide.DarkBlue" parent="Theme.BaseSeriesGuide.DarkBlue">

        <!-- All customizations that are NOT specific to a supported API-level can go here. -->

        <!-- Explicitly add windowActionBar as some devices crash due to it missing -->
        <item name="windowActionBar">false</item>

        <!--   your app's branding color (for the app bar) -->
        <item name="colorPrimary">@android:color/black</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/sg_color_secondary</item>

        <!-- Windows -->
        <item name="android:colorBackground">@color/background</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="windowActionModeOverlay">true</item>
        <!-- Note: nav bar color needs to be opaque! -->
        <item name="android:navigationBarColor">@color/black_almost</item>

        <!-- Text -->
        <item name="sgTextAppearanceBody1">@style/TextAppearance.SeriesGuide.Body1</item>
        <item name="sgTextAppearanceBody2">@style/TextAppearance.SeriesGuide.Body2</item>

        <!-- Colors -->
        <item name="sgTextColorGreen">@color/sg_color_secondary</item>
        <item name="sgTextColorSecondaryDim">@color/text_secondary_disabled_dark</item>
        <item name="sgColorBackgroundCard">@color/background_card_dark</item>
        <item name="sgColorBackgroundDim">@color/black_38</item>
        <item name="sgColorIcon">@color/white</item>
        <item name="sgColorIconInactive">@color/white_50</item>
        <item name="sgColorSeparator">@color/separator</item>
        <item name="sgColorDivider">@color/divider</item>
        <item name="sgColorShadow">@color/protection_dark</item>
        <item name="sgColorStatusBarOverlay">@color/black_87</item>

        <!-- Drawables -->
        <item name="drawableBackgroundGradient">@drawable/background_gradient</item>

    </style>

    <style name="Theme.BaseSeriesGuide.Light" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- All customizations that are SPECIFIC to API-level 21 go here. -->

        <!-- Note: nav bar color needs to be opaque! -->
        <item name="android:navigationBarColor">@color/black_almost</item>

    </style>

    <!-- SeriesGuide Light theme -->
    <style name="Theme.SeriesGuide.Light" parent="Theme.BaseSeriesGuide.Light">

        <!-- All customizations that are NOT specific to a supported API-level can go here. -->

        <!-- Explicitly add windowActionBar as some devices crash due to it missing -->
        <item name="windowActionBar">false</item>

        <!-- The color displayed most frequently across your appâ€™s screens and components. -->
        <item name="colorPrimary">@color/sg_color_primary</item>
        <!-- A color that passes accessibility guidelines for text/iconography when drawn on top of the primary color. -->
        <item name="colorOnPrimary">#ffffff</item>
        <!-- A dark variation of the primary color. -->
        <item name="colorPrimaryDark">@color/sg_color_primary_dark</item>
        <!-- A tonal variation of the primary color. -->
        <item name="colorPrimaryVariant">@color/sg_color_primary_dark</item>
        <!-- The secondary branding color for the app, usually an accented complement to the primary branding color. -->
        <item name="colorSecondary">@color/sg_color_secondary</item>
        <!-- A color that passes accessibility guidelines for text/iconography when drawn on top of the secondary color. -->
        <item name="colorOnSecondary">#ffffff</item>

        <!-- Windows -->
        <item name="android:colorBackground">@color/sg_color_background</item>
        <item name="android:windowBackground">@color/sg_color_background</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="windowActionModeOverlay">true</item>

        <!-- Remove default window shadow -->
        <item name="android:windowContentOverlay">@null</item>

        <!-- Action bar -->
        <item name="actionBarTheme">@style/ThemeOverlay.MaterialComponents.Dark.ActionBar</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.MaterialComponents.Light</item>

        <!-- Text -->
        <item name="android:textAppearance">@style/TextAppearance</item>
        <item name="sgTextAppearanceBody1">@style/TextAppearance.SeriesGuide.Body1</item>
        <item name="sgTextAppearanceBody2">@style/TextAppearance.SeriesGuide.Body2</item>

        <!-- Colors -->
        <item name="sgTextColorGreen">@color/sg_color_secondary</item>
        <item name="sgTextColorSecondaryDim">@color/text_secondary_disabled_light</item>
        <item name="sgColorBackgroundCard">@color/background_card_light</item>
        <item name="sgColorBackgroundDim">@color/white_50</item>
        <item name="sgColorIcon">@color/black_54</item>
        <item name="sgColorIconInactive">@color/black_38</item>
        <item name="sgColorSeparator">@color/separator_inverse</item>
        <item name="sgColorDivider">@color/divider_inverse</item>
        <item name="sgColorShadow">@color/protection_light</item>
        <item name="sgColorStatusBarOverlay">@color/white_87</item>

        <!-- Drawables -->
        <item name="drawableBackgroundGradient">@drawable/background_gradient_light</item>

    </style>

