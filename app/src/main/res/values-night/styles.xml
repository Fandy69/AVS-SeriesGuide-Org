<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- AppBar -->
    <style name="Widget.SeriesGuide.AppBarLayout" parent="Widget.MaterialComponents.AppBarLayout.Surface">
        <item name="android:background">@color/sg_background_app_bar_dark</item>
    </style>

    <!-- Toolbar -->
    <style name="Widget.SeriesGuide.Toolbar" parent="Widget.Material3.Toolbar.Surface">
        <item name="android:background">@color/sg_background_app_bar_dark</item>
        <!-- Note: this theme overlay will only work if the style is applied directly to a Toolbar. -->
        <item name="android:theme">@style/ThemeOverlay.SeriesGuide.Toolbar.Surface</item>
    </style>

    <style name="Widget.SeriesGuide.Toolbar.Transparent" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="android:background">@android:color/transparent</item>
        <!-- Note: this theme overlay will only work if the style is applied directly to a Toolbar. -->
        <item name="android:theme">@style/ThemeOverlay.SeriesGuide.Toolbar.Surface</item>
    </style>

</resources>